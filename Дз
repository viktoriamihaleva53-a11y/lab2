#include <locale.h>
#include <stdio.h>
#include <stdlib.h>
int main() 
{
    setlocale(LC_ALL, "RUS");
    int A = 400;
    int B = 2000;
    int C = 300;
    int D = 3000;

    printf("цена перчаток: %dp\n", A);
    printf("цена портфеля: %dp\n", B);
    printf("цена галстука: %dp\n", C);
    printf("исходная сумма: %dp\n", D);

    printf("Сдача: %dp\n", D - (A + B + C));
}
